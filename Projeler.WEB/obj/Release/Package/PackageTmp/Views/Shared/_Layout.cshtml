<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>EBİLTEM TEKNOLOJİ TRANSFER OFİSİ</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>


    <style type="text/css">
        #bs-example-navbar-collapse-1 .search-query {
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            border-radius: 3px;
        }

        #bs-example-navbar-collapse-1 button {
            border: 0;
            background: none;
            /** belows styles are working good */
            padding: 2px 5px;
            margin-top: 2px;
            position: relative;
            left: -28px;
            /* IE7-8 doesn't have border-radius, so don't indent the padding */
            margin-bottom: 0;
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            border-radius: 3px;
            color: #ffd111;
        }

        .search-query:focus + button {
            z-index: 3;
        }


        .navbar-default .navbar-collapse, .navbar-default .navbar-form {
            border-color: #1a7775;
            color: #1a7775;
        }

        .navbar-default .navbar-toggle .icon-bar {
            background-color: #fff;
        }

        .navbar-form .input-group {
            display: table;
        }

            .navbar-form .input-group .input-group-addon,
            .navbar-form .input-group .input-group-btn {
                white-space: nowrap;
                width: 1%;
            }

            .navbar-form .input-group .form-control {
                width: 100%;
            }

        #navBarColor {
            background-color: #1a7775;
            border-color: #1a7775;
        }

        #brand {
            color: #fff;
        }

            #brand:hover {
                color: #ffd111
            }
    </style>

</head>

<body>

    <nav id="navBarColor" class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a id="brand" class="navbar-brand" href="/Anasayfa">EBİLTEM</a>
        </div>

        <div class="collapse navbar-collapse custom-search-input" id="bs-example-navbar-collapse-1">
            
            <form class="navbar-form" role="search" method="post">
                <div class="input-group">
                    
                    <input 
                           type="text" 
                           class="search-query form-control" 
                           placeholder="Anahtar Kelime ile Arama" 
                           id="search"
                           name="search">

                    <div class="input-group-btn">
                        <button class="btn btn-warning" 
                                onclick="Search()">
                            
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </div>
                </div>
            </form>

        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bengisu Gültekin</p>
        </footer>
    </div>

</body>
</html>

